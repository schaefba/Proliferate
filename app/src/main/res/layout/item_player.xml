<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText android:id="@+id/player_name"
        android:layout_weight="1.5"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <LinearLayout android:id="@+id/life_counter_block"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText android:id="@+id/life_count"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button android:id="@+id/life_count_incr"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"/>
            <Button android:id="@+id/life_count_decr"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:id="@+id/commander_damage_block"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText android:id="@+id/commander_damage"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="+"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="-"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
